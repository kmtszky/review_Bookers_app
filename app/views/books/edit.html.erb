<p id="notice"><%= notice %></p>
<h1>Editing Book</h1>

<%= render 'books/error.messages', book: @book %>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Body %><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book", class: "actions" %>
<% end %>

<div class="actions">
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>