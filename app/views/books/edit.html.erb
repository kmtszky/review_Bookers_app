<h1>Editing Book</h1>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Bosy %><br />
    <%= f.text_field :body %>
  </div>
  <%= f.submit " Update Book " %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>